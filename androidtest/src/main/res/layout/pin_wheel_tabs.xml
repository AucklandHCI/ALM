<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:ale="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      class="nz.ac.auckland.alm.android.ALMLayout" android:id="@+id/view"
      android:layout_gravity="center_horizontal">
    <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Button 1" android:id="@+id/button1"
            ale:layout_rightTab="x2" ale:layout_bottomTab="y1"/>
    <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Button 2" android:id="@+id/button2"
            ale:layout_leftTab="x2" ale:layout_bottomTab="y2"/>
    <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Button 3" android:id="@+id/button3"
            ale:layout_leftTab="x1" ale:layout_topTab="y2"/>
    <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Button 4" android:id="@+id/button4"
            ale:layout_rightTab="x1" ale:layout_topTab="y1"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Middle" android:id="@+id/buttonMiddle"
            ale:layout_horizontal_alignment="center"
            ale:layout_vertical_alignment="center"
            ale:layout_leftTab="x1" ale:layout_topTab="y1" ale:layout_rightTab="x2" ale:layout_bottomTab="y2"/>
</view>